
set mark-symlinked-directories on

# mappings for Ctrl-left-arrow and Ctrl-right-arrow for word moving
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word
# Arrow key mapping for urxvt
"\eOc": forward-word
"\eOd": backward-word

# Keybinding to re-read inputrc file
"\C-x\C-r": re-read-init-file

set bell-style none

# allows for duplicating the word before the current cursor position on the
# current line by pressing <ctrl>+j
# from here: https://unix.stackexchange.com/a/356700
"\ee":shell-backward-word
"\ei":shell-forward-word
"\ew":copy-region-as-kill
"\ej":"\ee\e \ei\ew \C-y"
