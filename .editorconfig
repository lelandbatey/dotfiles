# EditorConfig is awesome: https://EditorConfig.org

# Note that at time of writing, this EditorConfig is mostly useful for
# controlling indentation for specific files via vim-sleuth, which respects
# EditorConfigs.

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
# Causes the vim option 'fixendofline' to be set
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# VimWiki file type https://github.com/vimwiki/vimwiki
[*.wiki]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

